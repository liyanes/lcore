# cmake/LCoreConfig.cmake.in
@PACKAGE_INIT@

# Import target
include("${CMAKE_CURRENT_LIST_DIR}/LCoreTargets.cmake")

# Export definitions
set(LCore_LCORE_ENABLE_RECORDSTACK @LCORE_ENABLE_RECORDSTACK@)
set(LCore_LCORE_ENABLE_ASSERT @LCORE_ENABLE_ASSERT@)
set(LCore_LCORE_NAMESPACE_NAME "@LCORE_NAMESPACE_NAME@")

# Export macro to upper level
target_compile_definitions(LCore::lcore INTERFACE
    $<IF:$<BOOL:${LCore_LCORE_ENABLE_RECORDSTACK}>,LCORE_ENABLE_RECORDSTACK,>
    $<IF:$<BOOL:${LCore_LCORE_ENABLE_ASSERT}>,LCORE_ENABLE_ASSERT,>
    LCORE_NAMESPACE_NAME=${LCore_LCORE_NAMESPACE_NAME}
)

# Check the dependencies
check_required_components(LCore)
